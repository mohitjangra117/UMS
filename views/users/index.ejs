<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Users - User Management System' }) %>
<body>
    <%- include('../partials/navigation') %>
    
    
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0">
                        
                        Users Management
                    </h1>
                    <% if (user.permissions && user.permissions.includes(2)) { %>
                    <a href="/users/create" class="btn btn-primary">
                        
                        Add User
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
        
        <%- include('../partials/alerts') %>
        
        
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    All Users (<%= totalUsers %> total)
                </h5>
            </div>
            <div class="card-body">
                <% if (users.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(userData => { %>
                            <tr>
                                <td><%= userData.id %></td>
                                <td>
                                    <a href="/users/<%= userData.id %>" class="text-decoration-none fw-medium">
                                        <%= userData.username %>
                                    </a>
                                </td>
                                <td><%= userData.email %></td>
                                <td>
                                    <span class="badge bg-primary"><%= userData.role_name %></span>
                                </td>
                                <td><%= userData.created_by_username || 'System' %></td>
                                <td><%= new Date(userData.created_at).toLocaleDateString() %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/users/<%= userData.id %>" class="btn btn-sm btn-outline-info" title="View">
                                            
                                            View 
                                        </a>
                                        
                                        <% if (user.permissions && user.permissions.includes(3)) { %>
                                            <% if (userData.role_name !== 'superadmin' || user.role_name === 'superadmin') { %>
                                            <a href="/users/<%= userData.id %>/edit" class="btn btn-sm btn-outline-warning" title="Edit">
                                                
                                              Edit
                                            </a>
                                            <% } %>
                                        <% } %>
                                        
                                        <% if (user.permissions && user.permissions.includes(4) && userData.id != user.id && userData.role_name !== 'superadmin') { %>
                                            <% if (userData.role_name !== 'admin' || user.role_name === 'superadmin') { %>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteUser(<%= userData.id %>, '<%= userData.username %>')" 
                                                    title="Delete">
                                                
                                                 Delete
                                            </button>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                
                
                <% if (totalPages > 1) { %>
                <nav aria-label="Users pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/users?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/users?page=<%= i %>"><%= i %></a>
                        </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/users?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
                <% } %>
                
                <% } else { %>
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No users found</h5>
                    <% if (user.permissions && user.permissions.includes(2)) { %>
                    <a href="/users/create" class="btn btn-primary mt-2">
                        <i class="fas fa-user-plus me-2"></i>Add First User
                    </a>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <%- include('../partials/scripts') %>
    <script>
        function deleteUser(userId, username) {
            if (confirm(`Are you sure you want to delete user "${username}"? This action cannot be undone.`)) {
                fetch(`/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the user.');
                });
            }
        }
    </script>
</body>
</html>
