<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'User Details - User Management System' }) %>
<body>
    <%- include('../partials/navigation') %>
    
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
               
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0">
                        User Details
                    </h1>
                    <% if (user.permissions && user.permissions.includes(3) && (userData.role_name !== 'superadmin' || user.role_name === 'superadmin')) { %>
                    <a href="/users/<%= userData.id %>/edit" class="btn btn-warning">
                        Edit User
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            
                            User Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>ID:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= userData.id %>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Username:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= userData.username %>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Email:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= userData.email %>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Role:</strong>
                            </div>
                            <div class="col-sm-9">
                                <span class="badge bg-primary fs-6"><%= userData.role_name %></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Created:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(userData.created_at).toLocaleDateString() %> 
                                at <%= new Date(userData.created_at).toLocaleTimeString() %>
                            </div>
                        </div>
                        
                        <% if (userData.updated_at) { %>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Last Updated:</strong>
                            </div>
                            <div class="col-sm-9">
                                <%= new Date(userData.updated_at).toLocaleDateString() %> 
                                at <%= new Date(userData.updated_at).toLocaleTimeString() %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            
                            Permissions
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (userPermissions && userPermissions.length > 0) { %>
                            <% userPermissions.forEach(permission => { %>
                            <div class="mb-2">
                                <span class="badge bg-info me-2">
                                    <i class="fas fa-check me-1"></i>
                                    <%= permission.name.replace('_', ' ').toUpperCase() %>
                                </span>
                                <br>
                                <small class="text-muted ms-2"><%= permission.description %></small>
                            </div>
                            <% }); %>
                        <% } else { %>
                        <p class="text-muted">No specific permissions assigned.</p>
                        <% } %>
                    </div>
                </div>
                
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            
                            Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <% if (user.permissions && user.permissions.includes(3) && (userData.role_name !== 'superadmin' || user.role_name === 'superadmin')) { %>
                            <a href="/users/<%= userData.id %>/edit" class="btn btn-warning">
                                
                                Edit User
                            </a>
                            <% } %>
                            
                            <% if (user.permissions && user.permissions.includes(4) && userData.id != user.id && userData.role_name !== 'superadmin') { %>
                                <% if (userData.role_name !== 'admin' || user.role_name === 'superadmin') { %>
                                <button type="button" class="btn btn-danger" 
                                        onclick="deleteUser(<%= userData.id %>, '<%= userData.username %>')">
                                    
                                    Delete User
                                </button>
                                <% } %>
                            <% } %>
                            
                            <a href="/users" class="btn btn-outline-primary">
                                
                                Back to Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/scripts') %>
    <script>
        function deleteUser(userId, username) {
            if (confirm(`Are you sure you want to delete user "${username}"? This action cannot be undone.`)) {
                fetch(`/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/users?success=' + encodeURIComponent(data.message);
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the user.');
                });
            }
        }
    </script>
</body>
</html>
