<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Add Role - User Management System' }) %>
<body>
    <%- include('../partials/navigation') %>
    

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                
                
                <h1 class="h3 mb-4 text-center">
                    
                    Add New Role
                </h1>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Role Information</h5>
                    </div>
                    <div class="card-body">
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger" role="alert">
                            
                            <%= error %>
                        </div>
                        <% } %>
                        
                        <form method="POST" action="/roles/create">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">
                                        
                                        Role Name *
                                    </label>
                                    <input type="text" class="form-control" id="name" name="name" 
                                           value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>" required>
                                    <div class="form-text">Role name must be 3-50 characters.</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="description" class="form-label">
                                        
                                        Description
                                    </label>
                                    <input type="text" class="form-control" id="description" name="description" 
                                           value="<%= typeof formData !== 'undefined' ? formData.description || '' : '' %>">
                                    <div class="form-text">Optional description for the role.</div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label">
                                    
                                    Permissions *
                                </label>
                                <div class="form-text mb-3">Select the permissions that users with this role will have:</div>
                                
                                <div class="row">
                                    <% permissions.forEach(permission => { %>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" 
                                                   id="permission_<%= permission.id %>" 
                                                   name="permissions" 
                                                   value="<%= permission.id %>"
                                                   <%= typeof formData !== 'undefined' && formData.permissions && formData.permissions.includes(permission.id.toString()) ? 'checked' : '' %>>
                                            <label class="form-check-label" for="permission_<%= permission.id %>">
                                                <strong><%= permission.name.replace('_', ' ').toUpperCase() %></strong>
                                                <br>
                                                <small class="text-muted"><%= permission.description %></small>
                                            </label>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="/roles" class="btn btn-secondary">
                                    
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    
                                    Create Role
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/scripts') %>
</body>
</html>
