<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Roles - User Management System' }) %>
<body>
    <%- include('../partials/navigation') %>
    
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0  ">
                        
                        Roles Management
                    </h1>
                    <% if (user.permissions && user.permissions.includes(5)) { %>
                    <a href="/roles/create" class="btn btn-primary">
                        
                        Add Role
                    </a>
                    <% } %>
                </div>  
            </div>
        </div>
        
        <%- include('../partials/alerts') %>
        
        
        <div class="row">
            <% roles.forEach(role => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            
                            <%= role.name %>
                        </h5>
                        <span class="badge bg-primary "><%= role.userCount %> users</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">
                            <%= role.description || 'No description available' %>
                        </p>
                        
                        <div class="mb-3">
                            <h6 class="fw-bold">Permissions:</h6>
                            <% if (role.permission_names && role.permission_names.length > 0) { %>
                                <% role.permission_names.forEach(permission => { %>
                                    <% if (permission) { %>
                                    <span class="badge bg-secondary me-1 mb-1"><%= permission.replace('_', ' ').toUpperCase() %></span>
                                    <% } %>
                                <% }); %>
                            <% } else { %>
                                <span class="text-muted">No permissions assigned</span>
                            <% } %>
                        </div>
                        
                        <small class="text-muted">
                            Created: <%= new Date(role.created_at).toLocaleDateString() %>
                        </small>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a href="/roles/<%= role.id %>" class="btn btn-outline-primary btn-sm">
                                
                                 View
                            </a>
                            
                            <% if (user.permissions && user.permissions.includes(6) && !['superadmin', 'admin', 'user'].includes(role.name.toLowerCase())) { %>
                            <a href="/roles/<%= role.id %>/edit" class="btn btn-outline-warning btn-sm">
                                
                                 Edit
                            </a>
                            <% } %>
                            
                            <% if (user.permissions && user.permissions.includes(6) && !['superadmin', 'admin', 'user'].includes(role.name.toLowerCase())) { %>
                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                    onclick="deleteRole(<%= role.id %>, '<%= role.name %>')">
                                
                                 Delete
                            </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        
        <% if (roles.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No roles found</h5>
            <% if (user.permissions && user.permissions.includes(5)) { %>
            <a href="/roles/create" class="btn btn-primary mt-2">
                <i class="fas fa-plus me-2"></i>Create First Role
            </a>
            <% } %>
        </div>
        <% } %>
    </div>
    
    <%- include('../partials/scripts') %>
    <script>
        function deleteRole(roleId, roleName) {
            if (confirm(`Are you sure you want to delete role "${roleName}"? This action cannot be undone.`)) {
                fetch(`/roles/${roleId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the role.');
                });
            }
        }
    </script>
</body>
</html>
